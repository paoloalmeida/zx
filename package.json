    "build": "npm run clear && npm run css && npm run copy",
    "build:min": "./node_modules/.bin/webpack --output-filename bundle.js -p",
    "build:all": "npm run build && npm run build:min"
  },
  "author": "Paolo Almeida",
  "devDependencies": {
