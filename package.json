  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint src/*.js",
    "start": "./node_modules/.bin/webpack-dev-server --open",
    "clear": "rimraf lib",
    "copy": "copyfiles -u 1 app/index.html dist/ && copyfiles -u 1 app/images/*.png dist/",
